{
  "name": "jira-api-mcp-wrapper",
  "version": "0.1.0",
  "description": "MCP server that talks to Jira Cloud REST API using static credentials (no OAuth) and exposes deterministic tools for issues/fields/users",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run bundle",
    "type-check": "tsc --noEmit",
    "start": "tsx src/index.ts",
    "start:prod": "npm run build && node dist/index.js",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=es2022 --format=cjs --outfile=dist/bundle.cjs",
    "test": "NODE_OPTIONS=--max-old-space-size=8192 npm run build && node --test \"tests/*.test.js\" --exclude-pattern=\"**/integration.test.js\"",
    "test:integration": "NODE_OPTIONS=--max-old-space-size=8192 npm run build && node --test \"tests/integration.test.js\""
  },
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^16.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }

}


